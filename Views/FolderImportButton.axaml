<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:DICOMApp.ViewModel"
			 x:DataType="vm:MainViewModel"
             x:Class="DICOMApp.FolderImportButton">
	<Panel>
		<Button Content="Importuj katalog obrazów"
								Command="{Binding OpenDicomDirectory}"
								x:Name="DataImport"/>
		<Popup
			IsOpen="{Binding DataImportPopup.IsVisible, Mode=TwoWay}"
			PlacementTarget="{Binding #DataImport}">
			<Border>
				<TextBlock  Text="{Binding DataImportPopup.Message}"/>
			</Border>
		</Popup>
	</Panel>
</UserControl>
