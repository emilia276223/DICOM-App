<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:DICOMApp.ViewModel"
			 x:DataType="vm:ElementListViewModel"
             x:Class="DICOMApp.ElementListView">
  <StackPanel>
	  <Button Content="{Binding ButtonText}"
			  Command="{Binding ToggleExpantion}"
			  IsEnabled="{Binding !IsListEmpty}"
			  x:Name="ElementSelectionButton"/>
		<Popup
			IsOpen="{Binding IsExpanded, Mode=TwoWay}"
			PlacementTarget="{Binding #ElementSelectionButton}"
			>
			<Panel>
				<ListBox ItemsSource="{Binding ElementsList}"
							IsVisible="{Binding !IsError}"
							SelectedItem="{Binding SelectedElement}"
						/> 
				<Border Background="LightCoral" Padding="5"
						IsVisible="{Binding IsError}">
					<TextBlock Text="{Binding PopupText}" Foreground="White"/>
				</Border>
			</Panel>
		</Popup>
  </StackPanel>
</UserControl>
