<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:DICOMApp.ViewModel"
			 xmlns:views="clr-namespace:DICOMApp"
			 x:DataType="vm:ImageSelectionViewModel"
             x:Class="DICOMApp.ImageSelectionView">

	<StackPanel Orientation="Horizontal">
		<views:ElementListView DataContext="{Binding Patients}"/>
		<views:ElementListView DataContext="{Binding Studies}"/>
		<views:ElementListView DataContext="{Binding Images}"/>
	</StackPanel>
</UserControl>

